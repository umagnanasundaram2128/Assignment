#include<stdio.h>
#include<stdlib.h>
int main()
{
	int **array;
	int i,j,row;
	printf("Enter the number of rows:");
	scanf("%d",&row);
	array=malloc(row*sizeof(int *));
	for(i=0;i<=row;i++)
	{
		array[i]=malloc(row*sizeof(int *));
	}
	array[0][0]=1;
	for(i=0;i<=row;i++)
	{
		for(j=1;j<=i;j++)
		{
			array[i][j]=array[i-1][j]+array[i-1][j-1];
			printf("%d\t",array[i][j]);
		}
		printf("\n");
	}
	//deallocating memory 
	for(i=0;i<=row;i++)
	{
		free(array[i]);
	}	
	free(array);	
	return 0;
}
